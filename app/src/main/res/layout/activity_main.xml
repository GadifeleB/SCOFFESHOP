<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pac"
    tools:context="com.example.brenda.geescoffeshop.MainActivity">

    <GridLayout
        android:id="@+id/gridLayout3"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginTop="18dp"
        android:layout_below="@+id/textView4"
        android:layout_alignRight="@+id/gridLayout"
        android:layout_alignEnd="@+id/gridLayout">

        <RadioButton
            android:id="@+id/radCappucino"
            android:layout_column="1"
            android:layout_row="0"
            android:text="cappucino"
            android:textColor="#FF00FF"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/txtPrice1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:text="20.90"
            android:textColor="#FF00FF" />

        <EditText
            android:id="@+id/item1"
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:layout_alignBaseline="@+id/radcaffe"
            android:layout_alignBottom="@+id/radcaffe"
            android:layout_alignLeft="@+id/item3"
            android:layout_alignStart="@+id/item3"
            android:layout_marginLeft="40dp"
            android:background="#FFFF"
            android:visibility="invisible"/>

        <TextView
            android:id="@+id/txtTotalCap"
            android:layout_marginLeft="30dp"
            android:text="0"
            android:textColor="#FF00FF"
            android:textSize="22dp" />


    </GridLayout>

    <GridLayout
        android:id="@+id/gridLayout2"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginTop="23dp"
        android:layout_below="@+id/gridLayout3"
        android:layout_centerHorizontal="true">

        <RadioButton
            android:id="@+id/radEspresso"
            android:layout_column="1"
            android:layout_row="0"
            android:text="Espresso"
            android:textColor="#FF00FF"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/txtprice2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:text="45.00"
            android:textColor="#FF00FF" />

        <EditText
            android:id="@+id/item2"
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:layout_alignBaseline="@+id/radcaffe"
            android:layout_alignBottom="@+id/radcaffe"
            android:layout_alignLeft="@+id/item3"
            android:layout_alignStart="@+id/item3"
            android:layout_marginLeft="40dp"
            android:background="#FFF"
            android:visibility="invisible"/>


        <TextView
            android:id="@+id/txtTotalEspress"
            android:layout_marginLeft="30dp"
            android:text="0"
            android:textColor="#FF00FF"
            android:textSize="22dp" />
    </GridLayout>

    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/gridLayout2"
        android:layout_centerHorizontal="true">

        <RadioButton
            android:id="@+id/radCaffeLatte"
            android:layout_column="1"
            android:layout_row="0"
            android:text="Caffe Latte"
            android:textColor="#FF00FF"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/txtprice3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:text="35.00"
            android:textColor="#FF00FF" />

        <EditText
            android:id="@+id/item3"
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:layout_alignBaseline="@+id/radcaffe"
            android:layout_alignBottom="@+id/radcaffe"
            android:layout_alignLeft="@+id/item3"
            android:layout_alignStart="@+id/item3"
            android:layout_marginLeft="30dp"
            android:background="#FFFF"
            android:visibility="invisible"/>


        <TextView
            android:id="@+id/txtTotalCaffe"
            android:layout_marginLeft="30dp"
            android:text="0"
            android:textColor="#FF00FF"
            android:textSize="22dp" />
    </GridLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="400dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_weight="1"
            android:text="COFFEE MENU "
            android:textAlignment="center"
            android:textColor="#FF00FF"
            android:textSize="18dp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_below="@+id/linearLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="17dp"
        android:orientation="horizontal">

    </LinearLayout>

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginTop="28dp"
        android:layout_below="@+id/gridLayout"
        android:layout_alignLeft="@+id/gridLayout"
        android:layout_alignStart="@+id/gridLayout"
        android:id="@+id/gridLayout4">

        <RadioButton
            android:id="@+id/radMochaLatte"
            android:layout_column="1"
            android:layout_row="0"
            android:text="Mocha Latte"
            android:textColor="#FF00FF"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/txtprice4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:text="50.00"
            android:textColor="#FF00FF" />

        <EditText
            android:id="@+id/item4"
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:layout_alignBaseline="@+id/radcaffe"
            android:layout_alignBottom="@+id/radcaffe"
            android:layout_alignLeft="@+id/item3"
            android:layout_alignStart="@+id/item3"
            android:layout_marginLeft="20dp"
            android:background="#FFF"
            android:visibility="invisible"/>


        <TextView
            android:id="@+id/txtTotalMochaL"
            android:layout_marginLeft="30dp"
            android:text="0"
            android:textColor="#FF00FF"
            android:textSize="22dp" />
    </GridLayout>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/gridLayout3"
        android:layout_alignStart="@+id/gridLayout3"
        android:layout_below="@+id/linearLayout3"
        android:text="FLAVOUR"
        android:textColor="#FF00FF"  />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PRICE"
        android:textColor="#FF00FF"
        android:layout_below="@+id/linearLayout3"
        android:layout_alignLeft="@+id/linearLayout3"
        android:layout_alignStart="@+id/linearLayout3" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="37dp"
        android:layout_marginRight="37dp"
        android:text="ITEM/S"
        android:textColor="#FF00FF"
        android:layout_above="@+id/gridLayout3"
        android:layout_toLeftOf="@+id/txtAmountDue"
        android:layout_toStartOf="@+id/txtAmountDue" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TOTAL"
        android:textColor="#FF00FF"
        android:layout_above="@+id/gridLayout3"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="30dp"
        android:layout_marginEnd="30dp" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/button2"
        android:layout_alignLeft="@+id/gridLayout4"
        android:layout_alignStart="@+id/gridLayout4"
        android:text="Order!!"
        android:textColor="#FF00FF"  />

    <TextView
        android:id="@+id/txtAmountDue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textColor="#FF00FF"
        android:textSize="22dp"
        android:layout_alignBaseline="@+id/button"
        android:layout_alignBottom="@+id/button"
        android:layout_alignRight="@+id/gridLayout4"
        android:layout_alignEnd="@+id/gridLayout4" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Amount Due"
        android:textColor="#FF00FF"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_below="@+id/gridLayout4"
        android:layout_toRightOf="@+id/button"
        android:layout_toEndOf="@+id/button" />

    <Button
        android:id="@+id/btnClear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="clear"
        android:onClick="reset"
        android:textColor="#FF00FF"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/textView4"
        android:layout_toEndOf="@+id/textView4" />

</RelativeLayout>
